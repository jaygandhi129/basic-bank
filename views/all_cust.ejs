<%- include('header'); -%>

<div class="col-md-9" style="margin: auto; margin-top: 3%; margin-bottom: 3%;">
    <div class="card shadow">
        <div class="card-body">
            <div class="<%=message%>" style="display: none;"></div>
            <div class="all_cust-head">
                <h2>Name : <%=rows[0].Name%></h2>
                <div class="bal">
                    <h4 style="text-shadow: 1px 1px 1px rgb(219, 211, 211);">Balance : ₹<%=rows[0].balance%></h4>
                </div>
                <div class="btn-div">
                    <button type="button" data-toggle="modal" data-target="#staticBackdrop"
                        class="btn btn-warning">Transfer Money <i class="fas fa-hand-holding-usd"></i></button>
                    <a role="button" class="btn btn-info" href="/all_trans">All Transactions <i class="fas fa-receipt"></i></a>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1"
                    aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">Transfer Money </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p style="font-weight: 600;">From :- <%=rows[0].email%></p>
                                <form action="/transfer" method="POST">
                                    <form>
                                        <div class="form-group">
                                            <input type="email" class="form-control" name="email"
                                                id="exampleInputEmail1" aria-describedby="emailHelp"
                                                placeholder="Receiver's Email ID">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="exampleInputPassword1"
                                                name="amount" placeholder="₹ Amount">
                                        </div>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close <i class="fas fa-times"></i></button>
                                        <button type="submit" class="btn btn-success">Transfer <i class="fas fa-check"></i></button>

                                    </form>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <h4>All Customers</h4>
            </div>
            <div class="table-div">
                <table class="table display table-bordered table-striped nowrap">
                    <thead>
                        <tr>
                            <th scope="col">Cust ID</th>
                            <th scope="col">Customer Name</th>
                            <th scope="col">Email ID</th>
                            <th scope="col">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(var i = 0;i<rows.length;i++){%>
                        <tr>
                            <th scope="col"><%=rows[i].id%></th>
                            <th scope="col"><%=rows[i].Name%></th>
                            <th scope="col"><%=rows[i].email%></th>
                            <th scope="col"><%=rows[i].balance%></th>
                        </tr>
                        <%}%>
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
        
        <script src="cust.js" type="text/javascript"></script>
        <%- include('footer'); -%>